<form class="sign-up">
	<h3>Sign Up</h3>
	<div class="form-group"><label class="col-sm-2 control-label">Firstname</label>
		<div class="col-sm-10"><input type="text" name="user[firstname]" value="" class="form-control"></div>
	</div>
	<div class="hr-line-dashed"></div>

	<div class="form-group"><label class="col-sm-2 control-label">Email</label>
		<div class="col-sm-10"><input type="text" name="user[email]" value="" class="form-control"></div>
	</div>
	<div class="hr-line-dashed"></div>

	<div class="form-group"><label class="col-sm-2 control-label">Password</label>
		<div class="col-sm-10"><input type="text" name="user[password]" value="" class="form-control"></div>
	</div>
	<div class="hr-line-dashed"></div>

	<div class="form-group"><label class="col-sm-2 control-label">Website</label>
		<div class="col-sm-10"><input type="text" name="user[website]" value="" class="form-control"></div>
	</div>
	<div class="hr-line-dashed"></div>

	<button type="submit" onclick="window.main.signUp(this)">Sign Up</button>
</form>