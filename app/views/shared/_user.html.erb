<% if !@state.errors.nil? && @state.info[:kind] == 'user' %>
<%= @state.errors.to_json %>
<div class="alert alert-danger alert-dismissable">
	<button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
	We have found errors in a form
</div>
<% end %>
<div class="form-group"><label class="col-sm-2 control-label">Firstname</label>
	<div class="col-sm-10"><input type="text" name="user[firstname]" value="<%= @uform[:firstname] %>" class="form-control"></div>
</div>
<div class="hr-line-dashed"></div>

<div class="form-group"><label class="col-sm-2 control-label">Surname</label>
	<div class="col-sm-10"><input type="text" name="user[surname]" value="<%= @uform[:surname] %>" class="form-control"></div>
</div>
<div class="hr-line-dashed"></div>

<div class="form-group"><label class="col-sm-2 control-label">Email</label>
	<div class="col-sm-10"><input type="text" name="user[email]" value="<%= @uform[:email] %>" class="form-control"></div>
</div>
<div class="hr-line-dashed"></div>

<div class="form-group"><label class="col-sm-2 control-label">Password</label>
	<div class="col-sm-10"><input type="text" name="user[password]" value="<%= @uform[:password] %>" class="form-control"></div>
</div>
<div class="hr-line-dashed"></div>


<% unless @state.errors.nil? %>
<script type="text/javascript">
	window.main.presentErrors(<%= raw @state.errors.to_json %>, '.user-form', 'user');
</script>
<% end %>

<div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</div>
